generator client {
  provider = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "sqlite"
  url      = "file:../data/dev.db" // turso のマイグレーションは手動でやるので、ここは開発環境でしか使われない。
}
model SampleOrder {
  id           String @id @default(cuid())
  region       String @map("region")
  name         String
  email        String
  zip          String
  country      String
  prefecture   String
  city         String
  address      String
  phone        String
  note         String?
  createdAt    String @map("created_at")

  @@index([createdAt])
  @@map("sample_orders")
}
