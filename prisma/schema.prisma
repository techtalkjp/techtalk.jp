generator kysely {
  provider    = "prisma-kysely"
  output      = "../app/services"
  fileName    = "types.ts"
  camelCase   = true
  readOnlyIds = true
}

datasource db {
  provider = "sqlite"
  url      = "file:../data/dev.db" // turso のマイグレーションは手動でやるので、ここは開発環境でしか使われない。
}

model SampleOrder {
  id         String   @id @default(dbgenerated("(uuid())"))
  region     String   @map("region")
  name       String
  email      String
  zip        String
  country    String
  prefecture String
  city       String
  address    String
  phone      String
  note       String?
  createdAt  DateTime @default(dbgenerated("CURRENT_TIMESTAMP")) @map("created_at")

  @@index([createdAt])
  @@map("sample_orders")
}
