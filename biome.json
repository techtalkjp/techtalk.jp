{
  "$schema": "https://biomejs.dev/schemas/1.8.2/schema.json",
  "organizeImports": {
    "enabled": false
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "linter": {
    "enabled": true,
    "ignore": ["worker-configuration.d.ts"],
    "rules": {
      "recommended": true,
      "suspicious": {
        "useAwait": "error",
        "noRedeclare": "off"
      },
      "style": {
        "noNonNullAssertion": "off"
      },
      "a11y": {
        "useMediaCaption": "off"
      }
    }
  }
}
